<div id="takePhotoModal" class="popup tablet-fullscreen">
    <div class="view view-popup navbar-fixed">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="left">
                    <a href="#" class="back link close-takePhoto">
                        <i class="icon icon-back"></i><div id="mapTitle">ถ่ายรูป</div>
                    </a>
                </div>
            </div>
        </div>
        <div class="page">
            <div class="page-content contact-edit-form">
                <div class="contact-header">
                    <div class="item-photo">
                        <img src="img/cats/{{model.picId}}.png" />
                    </div>
                    <div class="header-text">
                        <h3>{{model.firstName}} {{model.lastName}}</h3>
                        <p>{{model.company}}</p>
                        <p>ประเมินล่าสุดเมื่อ 11/22/33</p>
                    </div>
                </div>
                <div style="height:300px;width:100%">
                    <!--ถ่ายรูปบ้าน-->
                    <div class="card">
                        <div class="card-header">รูปบ้าน</div>
                        <div class="card-content">
                            <div class="card-content-inner" style="float: left;width:100%;height:228px;overflow: hidden;">
                                <img id="imgHome" src="{{model.imgHome}}" onError="this.onerror=null;this.src='img/noimage.jpg';" style="display: block;max-width: 90%;height: auto;" />
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="left">
                                <a href="#" style="display:inline;float:left;" class="button button-home-photo"><i class="ion-camera" style="font-size: 45px;color:gray"></i></a>
                                <a href="#" style="display:inline;float:left;" class="button button-home-library"><i class="ion-images" style="font-size: 45px;color:gray"></i></a>
                            </div>
                            <div class="right">
                                <a href="#" class="button button-home-upload"><i class="ion-upload" style="font-size: 45px;"></i></a>
                            </div>
                        </div>
                    </div>
                    <!--ถ่ายรูปครอบครัว-->
                    <div class="card">
                        <div class="card-header">รูปครอบครัว</div>
                        <div class="card-content">
                            <div class="card-content-inner" style="float: left;width:100%;height:228px;overflow: hidden;">
                                <img id="imgFamily" src="{{model.imgFamily}}" onError="this.onerror = null; this.src = 'img/noimage.jpg';" style="display: block;max-width: 90%;height: auto;" />
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="left">
                                <a href="#" style="display:inline;float:left;" class="button button-family-photo"><i class="ion-camera" style="font-size: 45px;color:gray"></i></a>
                                <a href="#" style="display:inline;float:left;" class="button button-family-library"><i class="ion-images" style="font-size: 45px;color:gray"></i></a>
                            </div>
                            <div class="right">
                                <a href="#" class="button button-family-upload"><i class="ion-upload" style="font-size: 45px;"></i></a>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>